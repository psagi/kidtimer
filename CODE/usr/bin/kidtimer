###################### Code ####################
################################################

if [ $TUI -eq 1 ]; then
	go_tui
fi

case "$COMMAND" in
addtime) go_addtime
        ;;
reset) go_reset_time "$KID"
        ;;
gettime) get_time
        ;;
logout) go_logout $KID
        ;;
hourly) go_hourly
        ;;
daily) go_daily
        ;;
#update) get_update
#;;
check) go_check
        ;;
info) get_info
        ;;
-h) go_help
        ;;
help) go_help
        ;;
*)
	go_echo_error
	go_help
        ;;
esac
exit 0
